<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - transcript</title>
    <link rel="stylesheet" href="/transch/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/transch/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/transch/transcript.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/transch">transcript</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/transch">首頁</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/transch/Insert/Addstudent">新增學生</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/transch/Insert/Addcourse">修課成績</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - transcript - 以.NetCore製作
        </div>
    </footer>
    <script src="/transch/lib/jquery/dist/jquery.min.js"></script>
    <script src="/transch/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/transch/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
